[ui]
username = Brad Sokol <bsokol@gmail.com
editor = vim
# OS X only
merge = Kaleidoscope

[hooks]
changegroup=hg diff --stat -r $HG_NODE -r tip

[extensions]
color =
convert =
graphlog =
hgext.extdiff =
hgext.hbisect =
# OS X only
hgext.mercurial_keyring = /Users/Brad/bin/mercurial_keyring.py
histedit =
mq =
pager =
progress = 
rebase =
record =
shelve =

# OS X only
[extdiff]
cmd.ksdiff = /usr/local/bin/ksdiff
opts.ksdiff = --changeset --wait --filelist

# OS X only
[merge-tools]
Kaleidoscope.executable = /usr/local/bin/ksdiff
Kaleidoscope.args = --merge --output $output --base $base -- $local $other

[pager]
pager = LESS='FSRX' less
quiet = True
attend = annotate, cat, diff, export, glog, log, in, out, qdiff
